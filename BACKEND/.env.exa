# Configurazione Server
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/tabletalk

# JWT
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@tabletalk.com

# Cloudinary (per le immagini)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Twilio (per le videochiamate)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_API_KEY=your_api_key
TWILIO_API_SECRET=your_api_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minuti
RATE_LIMIT_MAX=100               # 100 richieste per finestra

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Sicurezza
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=your_session_secret