{
  "appId": "com.TableTalkApp.tabletalk",
  "appName": "TableTalk",
  "webDir": "build",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "GoogleMaps": {
      "apiKey": "${MAPS_API_KEY}"
    },
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#ffffff",
      "showSpinner": false
    },
    "PushNotifications": {
      "presentationOptions": [
        "badge",
        "sound",
        "alert"
      ]
    },
    "LocalNotifications": {
      "smallIcon": "ic_stat_icon_config_sample",
      "iconColor": "#488AFF"
    }
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true
  },
  "ios": {
    "contentInset": "automatic",
    "scrollEnabled": true
  }
}
